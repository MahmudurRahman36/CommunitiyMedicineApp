@using CommunitiyMedicineApp.Models
@using CommunitiyMedicineApp.Models.Entity
@model CommunitiyMedicineApp.Models.Entity.Doctor
@{
    Layout = null;
    //List<Center> centerList = ViewBag.centerList;
}

<!DOCTYPE html>

<html>
<head>

    <link href="~/css/sidebar.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width"/>
    <title>SaveDoctor</title>

</head>
<body>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="@Url.Action("Index", "Home")">Home</a>
        <hr />
        <a href="@Url.Action("Login", "CenterOffice")">Center Login</a>
        <hr />
        <a href="@Url.Action("SaveDoctor", "CenterOffice")">Doctor Entry</a>
        <hr />
        <a href="@Url.Action("MedicineStockReport", "CenterOffice")">Medicine Stock Report</a>
        <hr />
        <a href="@Url.Action("Treatment", "CenterOffice")">Treatment</a>
        <hr/>
        <a href="@Url.Action("LogOff", "CenterOffice")">Logout</a>
        <hr />


    </div>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>
    <div align="center">
        <span style="font-size: 30px; cursor: pointer" onclick="openNav()">&#9776; Menu</span>
    </div>
        <div class="logout" align="right" style="padding-top: 5px;">

            @Html.ActionLink("Logout", "LogOff", "CenterOffice")

        </div>
<div class="Container" align="center" style="padding-top: 60px">

    <h1>Save Doctor Information</h1>
    <br/><br/><br/><br/>
    <form id="regForm" method="POST">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <table>

                <tr style="height: 25px; font-size: 20px;">
                    <td>@Html.LabelFor(a => a.Name, "Name")</td>
                    <td style="width: 200px; text-align: right">@Html.TextBoxFor(a => a.Name)</td>

                </tr>
                <tr>
                    <td colspan="2" style="text-align: right; height: 20px; font-size: 15px; color: red">
                        @Html.ValidationMessageFor(a => a.Name)
                        <br/><br/>
                    </td>
                </tr>

                <tr style="height: 25px; font-size: 20px">
                    <td>@Html.LabelFor(a => a.Degree)</td>
                    <td style="width: 200px; text-align: right">@Html.TextBoxFor(a => a.Degree)</td>

                </tr>

                <tr>
                    <td colspan="2" style="text-align: right; height: 20px; font-size: 15px; color: red">
                        @Html.ValidationMessageFor(a => a.Degree)

                        <br/><br/>
                    </td>

                </tr>

                <tr style="height: 25px; font-size: 20px">
                    <td>@Html.LabelFor(a => a.Specialisation)</td>
                    <td style="width: 200px; text-align: right">@Html.TextBoxFor(a => a.Specialisation)</td>


                </tr>

                <tr>
                    <td colspan="2" style="text-align: right; height: 20px; font-size: 15px; color: red">
                        @Html.ValidationMessageFor(a => a.Specialisation)<br/><br/>

                    </td>
                </tr>
                @if (ViewBag.CenterInfo != null)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(a => a.CenterId, new {Value = @ViewBag.CenterInfo})
                        </td>
                    </tr>
                }
                else
                {
                    <tr style="height: 25px; font-size: 20px">
                        <td>@Html.LabelFor(a => a.CenterId, "Center")</td>

                        <td style="width: 200px; text-align: right">
                            @Html.DropDownListFor(c => c.CenterId, ViewBag.centerList as IEnumerable<SelectListItem>, "Select...")
                        </td>

                    </tr>
                }

                <tr>
                    <td colspan="2" style="text-align: right; height: 20px; font-size: 15px; color: red">
                        @Html.ValidationMessageFor(a => a.CenterId)<br/><br/>

                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td style="text-align: right; height: 60px">
                        <input id="createButton" type="submit" value="Create Account" style="background-color: indianred; width: 145px; height: 38px; font-weight: bold; border-radius: 5px; font-size: 15px; color: bisque"/>
                    </td>
                </tr>

                <tr>
                    <td colspan="2" style="text-align: right; height: 50px; font-size: 20px; color: cadetblue">
                        @if (ViewBag != null)
                        {
                            @ViewBag.Message
                        }
                    </td>
                </tr>

            </table>
        }


    </form>
</div>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
